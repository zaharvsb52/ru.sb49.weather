<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menuItemHeight"
        android:gravity="center_vertical"
        android:minHeight="@dimen/menuItemHeight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="@dimen/menuItemImageDimen"
            android:layout_height="@dimen/menuItemImageDimen"
            android:layout_marginEnd="@dimen/menuItemMarginEnd"
            android:layout_marginStart="@dimen/menuItemIconMarginStart"
            android:contentDescription="@string/IcEditApiKeyContentDescription"
            tools:src="@android:drawable/ic_menu_edit" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/menuItemImageDimen"
            android:layout_height="@dimen/menuItemImageDimen"
            android:layout_marginEnd="@dimen/menuItemMarginEnd"
            android:layout_marginStart="@dimen/menuItemIconMarginStart"
            android:contentDescription="@string/IcDeleteApiKeyContentDescription"
            tools:src="@android:drawable/ic_delete" />

        <ImageView
            android:id="@+id/imgExists"
            android:layout_width="@dimen/menuItemImageDimen"
            android:layout_height="@dimen/menuItemImageDimen"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="@dimen/menuItemMarginStart"
            android:contentDescription="@string/IcCheckApiKeyContentDescription"
            tools:src="@android:drawable/checkbox_on_background" />

        <TextView
            android:id="@+id/txtProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="10dp"
            android:maxLines="2"
            android:textSize="@dimen/menuItemTitleTextSize"
            android:ellipsize="end"
            tools:text="Api name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineThickness1dp"
        android:background="@color/lineBackgroundColor" />
</LinearLayout>