<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">16sp</item>
  </style>
  <style name="textStyle">
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
  </style>
  <style name="conditionAlertedTextStyle" parent="textStyle">
    <item name="android:textColor">@color/conditionAlertedColor</item>
  </style>
  <style name="coldAlertedTemperatureTextStyle" parent="textStyle">
    <item name="android:textColor">@color/coldAlertedTemperatureColor</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="hotAlertedTemperatureTextStyle" parent="textStyle">
    <item name="android:textColor">@color/hotAlertedTemperatureColor</item>
  </style>
  <style name="logoWeatherTextStyle" parent="@style/textStyle">
    <item name="android:textColor">@color/logoWeatherTextColor</item>
    <item name="android:textSize">14sp</item>
  </style>
  <style name="tooltipStyle">
    <item name="android:textColor">@color/tooltipTextColor</item>
    <item name="android:textSize">20dp</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="wgTextStyle" parent="textStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:shadowColor">@color/black</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">1.2</item>
    <!--<item name="android:textAppearance">@android:style/TextAppearance.Large</item>-->
  </style>
  <style name="wgDateTimeTextStyle" parent="wgTextStyle">
    <item name="android:lineSpacingExtra">0sp</item>
  </style>
  <style name="wgClockTextStyle">
    <item name="android:fontFamily">sans-serif-light</item>
    <!--<item name="android:fontFamily">sans-serif-thin</item>-->
  </style>
</resources>
